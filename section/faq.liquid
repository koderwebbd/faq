<div class="central content">
  <h1 class="feature-header" data-cc-animate>{{ page.title }}</h1>

  <div class="rte" data-cc-animate data-cc-animate-delay="0.2s">
    {{ page.content }}
  </div>
  
  <div class="faq-wrap" data-cc-animate data-cc-animate-delay="0.2s">
  {% assign i = 0 %}
  {% for block in section.blocks %}
  	{% assign i = i | plus: 1 %}
  
  	{% if block.settings.q != "" or block.settings.a %}
       <div class="faq">
        <input type="checkbox" id="question{{i}}" name="q"  class="questions">
        <div class="plus">+</div>
        <label for="question{{i}}" class="question">
          {{ block.settings.q }}
        </label>
        <div class="answers">
          {{ block.settings.a }}
         </div>
      </div>
  	{% endif %}
  {%- endfor -%}
   </div>
</div>

<style>
  .question {
  	background: {{ section.settings.backgruond }};
    color: {{ section.settings.b }};
    border: 1px solid {{ section.settings.border }};
  }
  .plus{
  	color: {{ section.settings.b }};
  }
</style>
{% schema %}
  {
    "name": "FAQ",
    "settings": [
     	{
            "type": "color",
            "id": "b",
            "label": "Text Color"
        },
		{
            "type": "color",
            "id": "backgruond",
            "label": "Backgruond Color"
        },
		{
            "type": "color",
            "id": "border",
            "label": "Border Color"
        }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "Faq",
        "settings": [
          {
            "type": "text",
            "id": "q",
            "label": "Question"
          },
		  {
            "type": "richtext",
            "id": "a",
            "label": "Answer"
          }	
        ]
      }
    ]
  }
{% endschema %}
